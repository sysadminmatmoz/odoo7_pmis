	<record model="ir.ui.view" id="view_partner_form_inherit_zip">
		<field name="name">partner.form.zip</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form"/>
		<field name="type">form</field>
		<field name="arch" type="xml">
           <field name="zip" position="replace">
		    </field>
		</field>
	 </record>

	<record model="ir.ui.view" id="view_partner_form_inherit_city">
		<field name="name">partner.form.city</field>
		<field name="model">res.partner</field>
			<field name="priority">160</field>
		<field name="inherit_id" ref="base.view_partner_form"/>
		<field name="type">form</field>

		<field name="arch" type="xml">
		   <field name="city" position="replace" >
                <field name="zip" placeholder="ZIP" on_change="on_change_zip(zip)"/>
				<field name="city" placeholder="City" on_change="on_change_city(city,zip)"/>
				<field name="find_city" invisible="1" />              
			    <field name="province" placeholder="Province" on_change="on_change_province(province)" attrs="{'readonly':[('find_city','!=',False)],'invisible':[('enable_province','!=',False)]}"/>
				<field name="region" placeholder="Region" on_change="on_change_region(region)" attrs="{'readonly':[('province','!=',False)],'invisible':[('enable_region','!=',False)]}"/>
				
				<field name="enable_province" invisible="1"/>
				<field name="enable_region" invisible="1"/>
				<field name="enable_state" invisible="1" />
		   </field>
		   <field name="country_id" position="replace">
				<field name="country_id" completion="1" attrs="{'readonly':[('region','!=',False)]}"/>
			</field>
			<field name="state_id" position="replace">
				<field name="state_id" attrs="{'invisible':[('enable_state','!=',False)]}"/>
			</field>
		</field>
	 </record>
